# Environment Configuration
# Copy this file to .env and update with your actual values

# Environment type (development, preproduction, production)
ENVIRONMENT=development

# AWS credentials (for production deployment)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# Archer authentication settings
OPSAPI_ARCHER_USERNAME=your_archer_username
OPSAPI_ARCHER_PASSWORD=your_archer_password
OPSAPI_ARCHER_INSTANCE=your_archer_instance
OPSAPI_ARCHER_URL=https://your-archer-url.com/
OPSAPI_ARCHER_VERIFY_SSL=true

# OPS Portal API settings - Development Environment
# Use these URLs for development/testing (no SSL certificate required)
OPSAPI_OPS_PORTAL_AUTH_URL=https://gii-dev.ardentmc.net/dhsopsportal.api/api/auth/token
OPSAPI_OPS_PORTAL_ITEM_URL=https://gii-dev.ardentmc.net/dhsopsportal.api/api/Item
OPSAPI_OPS_PORTAL_CLIENT_ID=your_development_client_id
OPSAPI_OPS_PORTAL_CLIENT_SECRET=your_development_client_secret
OPSAPI_OPS_PORTAL_VERIFY_SSL=false

# OPS Portal API settings - Preproduction Environment
# Uncomment and use these URLs for preproduction (SSL certificate required)
# OPSAPI_OPS_PORTAL_AUTH_URL=https://giitest-api.dhs.gov/dhsopsportal.api/api/auth/token
# OPSAPI_OPS_PORTAL_ITEM_URL=https://giitest-api.dhs.gov/dhsopsportal.api/api/Item
# OPSAPI_OPS_PORTAL_CLIENT_ID=your_preproduction_client_id
# OPSAPI_OPS_PORTAL_CLIENT_SECRET=your_preproduction_client_secret
# OPSAPI_OPS_PORTAL_VERIFY_SSL=true

# OPS Portal API settings - Production Environment
# Uncomment and use these URLs for production (SSL certificate required)
# OPSAPI_OPS_PORTAL_AUTH_URL=https://gii-api.dhs.gov/dhsopsportal.api/api/auth/token
# OPSAPI_OPS_PORTAL_ITEM_URL=https://gii-api.dhs.gov/dhsopsportal.api/api/Item
# OPSAPI_OPS_PORTAL_CLIENT_ID=your_production_client_id
# OPSAPI_OPS_PORTAL_CLIENT_SECRET=your_production_client_secret
# OPSAPI_OPS_PORTAL_VERIFY_SSL=true

# SSL Certificate settings (for preproduction and production)
# Option 1: File paths to certificate and key files
# OPSAPI_OPS_PORTAL_CERT_FILE=/path/to/client.pem
# OPSAPI_OPS_PORTAL_KEY_FILE=/path/to/client.key

# Option 2: Certificate data as base64 encoded strings (for Lambda environments)
# OPSAPI_OPS_PORTAL_CERT_DATA=base64_encoded_certificate_data
# OPSAPI_OPS_PORTAL_KEY_DATA=base64_encoded_key_data

# Time log for tracking last run
OPSAPI_TIME_LOG=2025-01-01T00:00:00.000000

# Processing settings
OPSAPI_PROCESSING_FILTER_REJECTED=true
OPSAPI_PROCESSING_FILTER_UNPROCESSED=true
OPSAPI_PROCESSING_FILTER_BY_DATE=true

# Logging settings
OPSAPI_LOGGING_LEVEL=INFO
OPSAPI_LOGGING_FILE=logs/ops_api.log
