# Production Environment Configuration
# This file contains settings for the production environment

# Environment type
ENVIRONMENT=production

# Archer authentication settings (production)
OPSAPI_ARCHER_USERNAME=your_production_archer_username
OPSAPI_ARCHER_PASSWORD=your_production_archer_password
OPSAPI_ARCHER_INSTANCE=your_production_archer_instance
OPSAPI_ARCHER_URL=https://your-production-archer-url.com/
OPSAPI_ARCHER_VERIFY_SSL=true

# OPS Portal API settings - Production Environment
# SSL certificate REQUIRED for production
OPSAPI_OPS_PORTAL_AUTH_URL=https://gii-api.dhs.gov/dhsopsportal.api/api/auth/token
OPSAPI_OPS_PORTAL_ITEM_URL=https://gii-api.dhs.gov/dhsopsportal.api/api/Item
OPSAPI_OPS_PORTAL_CLIENT_ID=your_production_client_id
OPSAPI_OPS_PORTAL_CLIENT_SECRET=your_production_client_secret
OPSAPI_OPS_PORTAL_VERIFY_SSL=true

# SSL Certificate settings (REQUIRED for production)
# Option 1: File paths to certificate and key files
OPSAPI_OPS_PORTAL_CERT_FILE=/path/to/production/client.pem
OPSAPI_OPS_PORTAL_KEY_FILE=/path/to/production/client.key

# Option 2: Certificate data as base64 encoded strings (for Lambda environments)
# OPSAPI_OPS_PORTAL_CERT_DATA=base64_encoded_certificate_data
# OPSAPI_OPS_PORTAL_KEY_DATA=base64_encoded_key_data

# Time log for tracking last run
OPSAPI_TIME_LOG=2025-01-01T00:00:00.000000

# Processing settings
OPSAPI_PROCESSING_FILTER_REJECTED=true
OPSAPI_PROCESSING_FILTER_UNPROCESSED=true
OPSAPI_PROCESSING_FILTER_BY_DATE=true

# Logging settings
OPSAPI_LOGGING_LEVEL=INFO
OPSAPI_LOGGING_FILE=logs/ops_api.log
